<%- include('../partials/header.ejs') %>

<div class="container">
  <div class="row">
    <h1 style="text-align:center">Add new comment to <%= camp.name %></h1>
      <div style="width: 30%; margin: 25px auto">
        <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
          <div class="form-group">
            <textarea class="form-control" name="comment[text]" cols="30" rows="10" placeholder="Your comment"></textarea>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Author" name="comment[author]" />
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <p><a href="/campgrounds/<%= camp._id %>">Go back</a></p>
      </div>
    

  </div>
</div>

<%- include('../partials/footer.ejs') %>